<h1>Definitions!</h1>
#if ($definition)
  <p>$definition.getDefinition()</p>
#else
  <p>No definitions!</p>
#end

<p>Add a new Task:</p>

<form action="/definitions" method="post">
  <label for="definition">Definition</label>
  <input id="definition" name="definition" type="text">

  <button type="submit" class="btn btn-default">Add definition</button>
</form>
